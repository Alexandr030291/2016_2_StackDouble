<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
  <div class="row" style="background: skyblue; padding:0.2%">
    <div class="col-md-2 col-xs-3">
      <img name="avatar" class="media-object img-rounded" alt="40x40" align="left" hspace="2%" src="{data.avatar}"/>
      <h4 name="nick">
        <fest:value>data.nick</fest:value></h4>
      </div>

      <div class="col-md-2 col-xs-3">
        <img name="score_img" class="media-object img-rounded" alt="40x40" align="left" hspace="2%" height="40" src="./assets/goblet.svg"/>
        <h4 name="score">
          <fest:value>data.score</fest:value>
      </h4>
      </div>

      <div class="col-md-5 col-xs-1">
      </div>

      <div id="js-top-controls" class="col-md-3 col-xs-5" align="right">
        <button id="top_btn_volume" type="button" class="btn btn-margin"> <i class='glyphicon glyphicon-volume-off'></i></button>
        <button id="top_btn_tutorial" type="button" class="btn btn-margin"> <i class='glyphicon glyphicon-question-sign'></i></button>
        <button id="top_btn_combo_list" type="button" class="btn btn-margin"> <i class='glyphicon glyphicon-info-sign'></i></button>
        <button id="top_btn_exit" type="button" class="btn btn-margin"> <i class='glyphicon glyphicon-remove'></i></button>
      </div>
    </div>
  </fest:template>
