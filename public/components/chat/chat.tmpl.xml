<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <h3 id="jsTitle">Ты в чате, <fest:value>data.username</fest:value></h3>
    <div id="jsMessages" class="chat">
        <div class="cssload-wrap">
            <div class="cssload-cssload-spinner"></div>
        </div>
    </div>
    <form class="js-chat-form">
        <textarea required="required" class="chat__input" name="message" cols="30" rows="10"></textarea>
        <button name="name">
            Отправить
        </button>
    </form>
</fest:template>